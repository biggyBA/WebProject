CREATE TABLE IF NOT EXISTS `webProjectDB`.`Fault` (
  `idFault` INT(11) NOT NULL AUTO_INCREMENT,
  `dateTime` DATETIME NULL DEFAULT NULL,
  `productSerialNumber` VARCHAR(45) NULL DEFAULT NULL,
  `productId` VARCHAR(45) NULL DEFAULT NULL,
  `productType` VARCHAR(45) NULL DEFAULT NULL,
  `clientName` VARCHAR(45) NULL DEFAULT NULL,
  `clientStreet` VARCHAR(45) NULL DEFAULT NULL,
  `clientPlace` VARCHAR(45) NULL DEFAULT NULL,
  `clientPhoneOne` VARCHAR(45) NULL DEFAULT NULL,
  `clientPhoneTwo` VARCHAR(45) NULL DEFAULT NULL,
  `clientEmail` VARCHAR(45) NULL DEFAULT NULL,
  `faultDescription` VARCHAR(45) NULL DEFAULT NULL,
  `faultNote` VARCHAR(45) NULL DEFAULT NULL,
  `faultIssuedTo` VARCHAR(45) NULL DEFAULT NULL,
  `faultIssuedBy` VARCHAR(45) NULL DEFAULT NULL,
  `faultType` VARCHAR(45) NULL DEFAULT NULL,
  `faultPriority` VARCHAR(45) NULL DEFAULT NULL,
  `faultStatus` VARCHAR(45) NULL DEFAULT NULL,
  PRIMARY KEY (`idFault`))
ENGINE = InnoDB
DEFAULT CHARACTER SET = utf8
COLLATE = utf8_general_ci;

ALTER TABLE `webprojectdb`.`fault` 
ADD COLUMN `lastEdit` DATETIME NULL DEFAULT NULL AFTER `dateTime`;

ALTER TABLE `webprojectdb`.`fault` 
ADD COLUMN `clientPostalCode` VARCHAR(45) NULL AFTER `clientStreet`;

ALTER TABLE `webprojectdb`.`fault` 
ADD COLUMN `faultLat` DOUBLE NULL AFTER `faultStatus`,
ADD COLUMN `faultLng` DOUBLE NULL AFTER `faultLat`;